\def\maketitle{\par
  \begingroup
  \def\thefootnote{}
  \def\@makefnmark{
    \hbox
    {$^{\@thefnmark}$\hss}
  }
  \twocolumn[\@maketitle]
  \@thanks
  \endgroup
  \setcounter{footnote}{0}
  \let\maketitle\relax
  \let\@maketitle\relax
  \gdef\thefootnote{
  \arabic{footnote}
  }
  \gdef\@@savethanks{}
  \gdef\@thanks{}
  \gdef\@author{}
  \gdef\@title{}
  \let\thanks\relax
}

\def\@maketitle{
